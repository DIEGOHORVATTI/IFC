<div class="container">

  <div class="flex items-center flex-shrink-0 h-10 px-2">
    <button
      class="flex items-center justify-center w-6 h-6 ml-auto text-indigo-500 rounded hover:bg-indigo-500 hover:text-indigo-100">
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
    </button>
  </div>

  {{#each users}}
    <div class="flex flex-col pb-2 overflow-auto">
      <div class="relative flex flex-col items-start p-4 mt-3 rounded-lg cursor-pointer group hover:bg-opacity-100 bg-gray-500" draggable="true">
        <button
          class="absolute top-0 right-0 flex items-center justify-center hidden w-5 h-5 mt-3 mr-2 text-gray-500 rounded hover:bg-gray-200 hover:text-gray-700 group-hover:flex">
          <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
          </svg>
        </button>
        <span class="flex items-center h-6 px-3 text-xs font-semibold text-green-500 bg-green-100 rounded-full">{{this.name}}</span>
        <h4 class="mt-3 text-sm font-medium">{{this.occupation}}</h4>
        <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
          <div class="flex items-center">
            <i class="fas fa-plus"></i>
            <a href="/users/{{this.id}}" class="details-btn">&nbsp;Ver detalhes</a>
          </div>
          <div class="relative flex items-center ml-4">
            <i class="fas fa-pen"></i>
            <a href="/users/edit/{{this.id}}" class="edit-btn">&nbsp;Editar</a>
          </div>
          <div class="flex items-center ml-4">
            <i class="fas fa-trash"></i>
            <form action="/users/delete/{{this.id}}" method="POST">
              <input type="submit" value=" Excluir" class="delete-btn">
            </form>
          </div>
        </div>
      </div>
    </div>

  {{/each}}
</div>