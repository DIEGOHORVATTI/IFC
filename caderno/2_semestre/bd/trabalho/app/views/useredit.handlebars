<form action="/users/update" method="POST" class="form">
  <div class="flex flex-col pb-2 overflow-auto">
    <div
      class="relative flex flex-col items-start p-4 mt-3 bg-white rounded-lg cursor-pointer bg-opacity-90 group hover:bg-opacity-100"
      draggable="true">
      <button
        class="absolute top-0 right-0 flex items-center justify-center hidden w-5 h-5 mt-3 mr-2 text-gray-500 rounded hover:bg-gray-200 hover:text-gray-700 group-hover:flex">
        <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
        </svg>
      </button>
      <span
        class="flex items-center h-6 px-3 text-xs font-semibold text-green-500 bg-green-100 rounded-full">Editando: {{user.name}}</span>
    </div>
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked>
    {{else}}
      <input type="checkbox" name="newsletter">
    {{/if}}    
    <label for="newsletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar">
</form>
<div class="address-container">
  <h2>Endereços</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o núemro da residência">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a cidade">
    </div>
    <input type="submit" value="Incluir endereço">
  </form>
  <div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
      <div>
        #{{this.id}} - 
        {{this.street}} - 
        {{this.number}} - 
        {{this.city}}
        <form action="/address/delete" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="submit" value="Excluir">
        </form>
      </div>
    {{/each}}
  </div>
</div>